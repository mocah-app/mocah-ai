// auth.prisma
model User {
  id            String    @id @map("_id")
  name          String
  email         String
  emailVerified Boolean
  image         String?
  stripeCustomerId String? // Better Auth Stripe plugin field
  createdAt     DateTime
  updatedAt     DateTime
  sessions      Session[]
  accounts      Account[]
  members       Member[]
  teamMembers   TeamMember[]
  generationHistory GenerationHistory[]
  aiPrompts     AIPrompt[]
  usageQuotas   UsageQuota[]
  imageAssets   ImageAsset[]
  trial         Trial?       // One trial per user (optional)

  @@unique([email])
  @@map("user")
}

model Session {
  id                  String   @id @map("_id")
  expiresAt           DateTime
  token               String
  createdAt           DateTime
  updatedAt           DateTime
  ipAddress           String?
  userAgent           String?
  userId              String
  activeOrganizationId String?
  activeTeamId        String?
  user                User     @relation(fields: [userId], references: [id], onDelete: Cascade)

  @@unique([token])
  @@index([activeOrganizationId])
  @@index([activeTeamId])
  @@map("session")
}

model Account {
  id                    String    @id @map("_id")
  accountId             String
  providerId            String
  userId                String
  user                  User      @relation(fields: [userId], references: [id], onDelete: Cascade)
  accessToken           String?
  refreshToken          String?
  idToken               String?
  accessTokenExpiresAt  DateTime?
  refreshTokenExpiresAt DateTime?
  scope                 String?
  password              String?
  createdAt             DateTime
  updatedAt             DateTime

  @@map("account")
}

model Verification {
  id         String    @id @map("_id")
  identifier String
  value      String
  expiresAt  DateTime
  createdAt  DateTime?
  updatedAt  DateTime?

  @@map("verification")
}
